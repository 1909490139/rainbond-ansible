#!/bin/bash

version={{ rainbond_version }}
rainbond=(rbd-worker rbd-chaos rbd-api rbd-app-ui rbd-webcli rbd-mq rbd-monitor rbd-gateway rbd-eventlog)

upgrade_rainbond(){
    for rbdimg in ${rainbond[@]}
    do
        docker pull goodrain.me/${rbdimg}:${version}
    done
}

case $1 in
    *)
        upgrade_rainbond
    ;;
esac

